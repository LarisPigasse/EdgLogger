{
  "name": "@edg/log-service",
  "version": "1.1.0",
  "description": "Sistema avanzato di logging per applicazioni EDG - Server + Client Library integrato",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "exports": {
    ".": {
      "require": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./client": {
      "require": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    }
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:api": "ts-node src/scripts/testApi.ts",
    "test:events": "ts-node src/scripts/testStandardizedEvents.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LarisPigasse/EdgLogger.git"
  },
  "keywords": [
    "logging",
    "edg",
    "microservices",
    "events",
    "audit",
    "typescript"
  ],
  "author": "Mormegil",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LarisPigasse/EdgLogger/issues"
  },
  "homepage": "https://github.com/LarisPigasse/EdgLogger#readme",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mongoose": "^8.15.0",
    "node-fetch": "^2.7.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.15.19",
    "@types/node-fetch": "^2.6.12",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ]
}
